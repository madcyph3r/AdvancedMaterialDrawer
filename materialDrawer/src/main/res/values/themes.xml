<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="">
        <!--  <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
          <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>-->
        <item name="actionBarStyle">?attr/drawerActionBarStyle</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <!--<item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>-->
    </style>

    <style name="MaterialNavigationDrawerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="drawerColor">#111</item>
        <item name="belowToolbar">false</item>
        <item name="uniqueToolbarColor">false</item>
        <item name="labelColor">#888888</item>
        <item name="sectionStyle">@style/MaterialSectionTheme</item>
        <!--<item name="subheaderStyle">@style/MaterialSubheaderTheme</item>-->
        <item name="headItemStyle">@style/MaterialHeadItemTheme</item>
        <item name="multipaneSupport">false</item>
        <item name="autoDarkStatusBar">true</item>
        <item name="actionBarOverlay">false</item>
        <item name="actionBarOverlayAlpha">1.0</item>
        <item name="drawerActionBarStyle">@style/ToolBarStyle.Event</item>
        <item name="dividerStrokeWidth">1dp</item>
        <item name="dividerColor">@drawable/divider</item>
    </style>

    <style name="MaterialNavigationDrawerTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerColor">#fafafa</item>
        <item name="belowToolbar">false</item>
        <item name="uniqueToolbarColor">false</item>
        <item name="labelColor">#afafaf</item>
        <item name="sectionStyle">@style/MaterialSectionTheme.Light</item>
        <!--<item name="subheaderStyle">@style/MaterialSubheaderTheme.Light</item>-->
        <item name="headItemStyle">@style/MaterialHeadItemTheme.Light</item>
        <item name="multipaneSupport">false</item>
        <item name="autoDarkStatusBar">true</item>
        <item name="actionBarOverlay">false</item>
        <item name="actionBarOverlayAlpha">1.0</item>
        <item name="drawerActionBarStyle">@null</item>
        <item name="dividerStrokeWidth">1dp</item>
        <item name="dividerColor">@drawable/divider</item>
    </style>

    <style name="MaterialNavigationDrawerTheme.Light.DarkActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="belowToolbar">false</item>
        <item name="uniqueToolbarColor">false</item>
        <item name="popupTheme">@style/Base.V21.Theme.AppCompat.Light.Dialog</item>
        <item name="labelColor">#afafaf</item>
        <item name="drawerColor">#fafafa</item>
        <item name="sectionStyle">@style/MaterialSectionTheme.Light</item>
        <item name="headItemStyle">@style/MaterialHeadItemTheme.Light</item>
        <item name="multipaneSupport">false</item>
        <item name="autoDarkStatusBar">true</item>
        <item name="actionBarOverlay">false</item>
        <item name="actionBarOverlayAlpha">1.0</item>
        <item name="drawerActionBarStyle">@null</item>
        <item name="dividerStrokeWidth">1dp</item>
        <item name="dividerColor">@drawable/divider</item>
    </style>

    <style name="MaterialNavigationDrawerTheme.Light.TranslucentKitKatStatusBar" parent="MaterialNavigationDrawerTheme.Light" />

    <style name="MaterialNavigationDrawerTheme.TranslucentKitKatStatusBar" parent="MaterialNavigationDrawerTheme" />

    <style name="MaterialNavigationDrawerTheme.Light.DarkActionBar.TranslucentKitKatStatusBar" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar" />

    <style name="MaterialSectionTheme">
        <item name="sectionColorIcon">#FFF</item>
        <item name="sectionColorText">#FFF</item>
        <item name="sectionColorNotification">#FFF</item>
        <!-- Do not show this color [default] -->
        <item name="sectionOnPressHighLightColor">#00FFFFFF</item>
        <item name="sectionBackgroundColorSelected">#1AFFFFFF</item>
        <item name="sectionBackgroundColor">#00FFFFFF</item>
        <item name="sectionRippleColor">#fafafa</item>
    </style>

    <style name="MaterialSectionTheme.Light">
        <item name="sectionColorIcon">#000000</item>
        <item name="sectionColorText">#000000</item>
        <item name="sectionColorNotification">#000000</item>
        <!-- Do not show this color [default] -->
        <item name="sectionOnPressHighLightColor">#00000000</item>
        <item name="sectionBackgroundColorSelected">#1A000000</item>
        <item name="sectionBackgroundColor">#00FFFFFF</item>
        <item name="sectionRippleColor">#8C8C8C</item>
    </style>

    <!--  <style name="MaterialSubheaderTheme">
          <item name="subheaderTitleColor">#FFF</item>
      </style>

      <style name="MaterialSubheaderTheme.Light">
          <item name="subheaderTitleColor">#000</item>
      </style>-->

    <style name="MaterialHeadItemTheme">
        <item name="titleColor">#FFFFFF</item>
        <item name="subTitleColor">#FFFFFF</item>
        <item name="backgroundGradient">@drawable/black_gradient</item>
    </style>

    <!--
    <style name="MaterialAccountTheme.Light">
        <item name="titleColor">#000</item>
        <item name="subTitleColor">#000</item>
        <item name="backgroundGradient">@drawable/white_gradient</item>
    </style>
    -->

    <style name="MaterialHeadItemTheme.Light">
        <item name="titleColor">#FFFFFF</item>
        <item name="subTitleColor">#FFFFFF</item>
        <item name="backgroundGradient">@drawable/black_gradient</item>
    </style>
</resources>